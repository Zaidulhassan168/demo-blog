<!DOCTYPE html>
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <section class="hero is-primary is-medium">
     
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">

            <%= link_to 'All Posts', root_path, class: "navbar-item" %>
            <%= link_to 'Top Posts', '/top_rated_posts', class: "navbar-item" %>
            <% if user_signed_in? %>
              
              <%=link_to 'My posts', '/show_by_user', class: "navbar-item"%>
              <%=button_to 'Sign Out', destroy_user_session_path, method: 'delete', class: " btn btn-danger"  %>
            <% else %>
              
              <%= link_to 'Sign In', new_user_session_path, class: "navbar-item" %>
              <%=link_to 'Sign Up', new_user_registration_path, class: "navbar-item"%>
            <% end %>
            

            <span class="navbar-burger burger" data-target="navbarMenuHeroA">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
            <% if user_signed_in?   %>
              <%= link_to "Create New Post", new_post_path, class:"navbar-item" %>
            <% end %>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title">
          <%= yield :page_title %>
        </h1>
      </div>
    </div>
  </section>
    <p class="notice" style= "color:blue"><%= notice %></p>
   <p class="alert" style= "color:red"><%= alert %></p>
  <%= yield %>
 
</body>
</html>
